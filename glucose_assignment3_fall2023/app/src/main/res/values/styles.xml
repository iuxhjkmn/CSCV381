<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="scrollingView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>"
        <item name="android:background">#003366</item>
        <item name="android:scrollbars">vertical</item>
    </style>
    <style name="center">
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="checkBox" >
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">6sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ListlabelItem">
        <item name="android:layout_gravity">top|right|center</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_margin">6sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tableLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:textColor">#CC0033</item>
        <item name="android:textSize">24sp</item>
        <item name="android:stretchColumns">1</item>
        <item name="android:maxLength">2</item>
        <item name="android:color">#ff9</item>
    </style>
    <style name="textBox" parent="center">
        <item name="android:inputType">number</item>
        <item name="android:maxLength">3</item>
        <item name="android:textColorHint">#7F7F7F</item>
        <item name="android:textColor">#fff</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_weight">.5</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="labelItem">
        <item name="android:layout_gravity">top|right|center</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_margin">10sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dateButton" parent= "Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#f3e8e8</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="actionButton" parent="center">
        <item name="android:layout_width">0dip</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#3F51B5</item>
        <item name="android:background">#fff</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dip</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
