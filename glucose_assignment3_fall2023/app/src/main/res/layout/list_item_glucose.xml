<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#003366"
    android:orientation="horizontal"
    android:padding="0dp">

    <TextView
        android:id="@+id/glucose_list_item_dateTextView"
        style="@style/ListlabelItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:padding="8dp"
        android:text="Glucose date" />

    <TextView
        android:id="@+id/glucose_list_item_avgGlucoseTextView"
        style="@style/ListlabelItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="8dp"
        android:text="Level"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/glucose_list_item_isNormalCheckBox"
        style="@style/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="false"
        android:text="@string/isNormal_label" />

</LinearLayout>